<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    tools:context=".Dangky">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="4dp"
            android:background="@drawable/nutbamcus"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:contentDescription="Logo"
                android:src="@drawable/scooter" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Đăng Ký Tài Khoản"
                android:textColor="@color/text_light"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hoten"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/vienmenu1"
                android:hint="Họ tên"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#333333"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/taikhoan2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/vienmenu1"
                android:hint="Email"
                android:padding="12dp"
                android:textColor="#333333"
                android:textColorHint="#757575"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/diachi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/vienmenu1"
                android:hint="Địa chỉ"
                android:padding="12dp"
                android:textColor="#333333"
                android:textColorHint="#757575"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/matkhau2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/vienmenu1"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#333333"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nhaplaimk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/vienmenu1"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#333333"
                android:textColorHint="#757575"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dangky2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/vienmenu1"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium"
                android:text="Đăng Ký"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:text="Đã có tài khoản ? ___ Đăng nhập"
                android:textColor="@color/text_light"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
