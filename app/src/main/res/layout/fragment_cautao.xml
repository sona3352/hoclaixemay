<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hình ảnh -->
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>

            <!-- Câu hỏi -->
            <TextView
                android:id="@+id/cauhoi90"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Câu hỏi: What is the capital of France?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="#E1E1E1"
                android:layout_marginTop="10dp"/>

            <!-- Đáp án -->
            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. Paris"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="#FFFFFF"/>

                <RadioButton
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. London"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="#FFFFFF"/>

                <RadioButton
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. Berlin"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="#FFFFFF"/>

                <RadioButton
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D. Madrid"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="#FFFFFF"/>
            </RadioGroup>
            <TextView
                android:id="@+id/tvGiaithich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giải thích sẽ hiển thị ở đây..."
                android:textSize="18sp"
                android:textColor="#333333"
                android:padding="8dp"
                android:visibility="gone"
                android:background="#DFFFD6"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
